<Window x:Class="VB_MNT.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home" Height="450" Width="800">
    <DockPanel>
        <!-- Menu no topo da tela -->
        <Menu DockPanel.Dock="Top">
            <!-- Menu Cadastro -->
            <MenuItem Header="Cadastro">
                <MenuItem Header="Usuários" Click="OpenTab_Click" />
                <MenuItem Header="Empresas" Click="OpenTab_Click" />
                <MenuItem Header="Produtos" Click="OpenTab_Click" />
            </MenuItem>

            <!-- Menu Relatórios -->
            <MenuItem Header="Relatórios">
                <MenuItem Header="Relatório de Vendas" Click="OpenTab_Click" />
                <MenuItem Header="Relatório de Estoque" Click="OpenTab_Click" />
            </MenuItem>

            <!-- Menu Configurações -->
            <MenuItem Header="Configurações">
                <MenuItem Header="Perfil" Click="OpenTab_Click" />
                <MenuItem Header="Preferências" Click="OpenTab_Click" />
            </MenuItem>
        </Menu>

        <!-- Área principal para o conteúdo em abas -->
        <TabControl x:Name="MainTabControl" Margin="10" />
    </DockPanel>
</Window>
